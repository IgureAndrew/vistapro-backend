{
  "buildCommand": "cd frontend && pnpm install && pnpm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && pnpm install --registry https://registry.npmjs.org/",
  "redirects": [
    {
      "source": "/www.vistapro.ng/(.*)",
      "destination": "https://vistapro.ng/$1",
      "permanent": true
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "/dashboard/$1",
      "permanent": false
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
